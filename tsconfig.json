{
  "compilerOptions": {
    "target": "es2017",                            
    "module": "commonjs",                          
    "strict": false,
    "esModuleInterop": true,                       
    "skipLibCheck": true,   
    "allowJs": true,                       
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ]    
  },
  "include": [
    "src/**/*.ts"
  ]
}
